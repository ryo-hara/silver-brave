{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AdditionalScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.txt",
					"match": "\\#[MSG|MSGCLEAR|FADE|WAIT|BGSET|BGMPLAY|MSGWINDOW_ON|BUSET|BUSET2|WFOUT|EVENTEND|SHAKE]+"
				},
				{
					"name": "keyword.control2.txt",
					"match": "\\[[\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FFFa-zA-Z0-9]+\\][0-9]+\\_[0-9]+"
				}
			]

		},
		"strings": {
			"name": "string.quoted.double.txt",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.txt",
					"match": "\\\\."
				}
			]
		},
		"comments":{
			"patterns": [{
				"name": "comment.control.txt",
				"match": "//.*$"
			}]
		}
	},
	"scopeName": "source.txt"
}